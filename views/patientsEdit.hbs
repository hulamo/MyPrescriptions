<!-- views/patientsEdit.handlebars -->
<!--To add patients-->
  <!-- Prescription Log Button-->
<div class="row justify-content-center">
  <div class="col-sm-6">
    <h2>New Patient</h2>
    <br>
   <form id="doctorsLogin" name="doctorsLogin" method="post" action="/api/insertapaciente">
    <div class="form-group m-2">
      <label for="patFirstName">First Name:</label>
      <input type="text" class="form-control" name="pat_firstname" aria-describedby="patFirstName" placeholder="John">
    </div>

    <div class="form-group m-2">
      <label for="patLastName">Last Name:</label>
      <input type="text" class="form-control" name="pat_lastname" aria-describedby="patLastName" placeholder="Doe">
    </div>

    <div class="form-group m-2">
      <label for="patBirthDate">Birth date: </label>
      <input type="text" class="form-control" name="pat_birthdate"  aria-describedby="patBirthDate" placeholder="1980/12/05">
    </div>
    
     <div class="form-group m-2">
      <label for="patGender">Gender: </label>
      <input type="text" class="form-control" name="pat_gender"  aria-describedby="patGender" placeholder="M/F">
    </div>
    
    <div class="form-group m-2">
      <label for="patEmail">Email: </label>
      <input type="email" class="form-control" name="pat_email"  aria-describedby="patEmail" placeholder="example@mail.com">
    </div>
    
    <div class="form-group m-2">
      <label for="patPhone">Phone number: </label>
      <input type="text" class="form-control" name="pat_phone"  aria-describedby="patPhone" placeholder="555-555-5555">
    </div>
    <div class="text-center">
    <button type="submit" id="submit" class="btn btn-primary float-right">Submit</button>
</div>
  </form>

</div>
</div>

