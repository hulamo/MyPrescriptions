<!-- views/doctors.handlebars -->

<form id="doctors" name="doctors" method="post" action="/doctors">

<div class="row justify-content-center">
  <div class="col-sm-6">
    <h2>Doctor Registration</h2>
    <br>
      <!-- -- Name ----- -->
      <div class="form-group">
        <label for="firstname"> First Name </label>
        <input name="firstname" type="text"  class="form-control" aria-describedby="med-FirstName" placeholder="John">
      </div>
      <div class="form-group">
        <label for="med-LastName"> Last Name </label>
        <input name="lastname" type="text"  class="form-control" aria-describedby="med-LastName" placeholder="Doe">
      </div>
      <!-- -- Email ----- -->
      <div class="form-group">
        <label for="med-mail"> Email </label>
        <input name="email" type="text"  class="form-control" aria-describedby="med-mail"
          placeholder="email@example.com">
      </div>
      <!-- -- Phone number --- -->
      <div class="form-group">
        <label for="phone"> Phone </label>
        <input name="phone" type="text"  class="form-control" aria-describedby="med-phone" placeholder="555 555 5556">
      </div>
      <!-- -- Username ---- -->
      <div class="form-group">
        <label for="username"> Username</label>
        <input name="username" type="text"  class="form-control" aria-describedby="med-username"
          placeholder="username">
      </div>
      <!-- -- Password - -->
      <div class="form-group">
        <label for="password"> Password </label>
        <input name="password" type="password"  class="form-control" aria-describedby="med-pass"
          placeholder="password">
      </div>
      <!-- -- Professional License- -->
      <div class="form-group">
        <label for="license"> Professional License </label>
        <input name="license" type="text"  class="form-control" aria-describedby="med-plicense"
          placeholder="Professional License">
      </div>
      <!-- --------------- -->
      <div class="text-right">
    <button type="submit" id="submit" class="btn btn-primary float-right">Submit</button>
</div>

</div>
</div>
    </form>

    