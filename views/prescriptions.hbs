<!-- views/prescriptions.handlebars -->

<!--To add prescriptions-->

 
  <form id="doctorsLogin" name="doctorsLogin" method="post" action="/api/insertareceta2">

  <div class="row justify-content-center">
  <div class="col-sm-6">

      <label class="mr-sm-2" for="selectPatient">Name: &nbsp;&nbsp; {{recs.firstname}}&nbsp;&nbsp; &nbsp;&nbsp; </label>
      <label class="mr-sm-2" for="selectPatient">Lastname:&nbsp;&nbsp;  {{recs.lastname}}&nbsp;&nbsp; &nbsp;&nbsp; </label>
      <label class="mr-sm-2" for="selectPatient">Date of Birth:&nbsp;&nbsp;  {{fecha}}</label>
         <input name="PatientId" type="hidden" value="{{recs.id}}">

         </div>
         </div>

<br>
  <div class="row justify-content-center">
  <div class="col-sm-6">
    
              <label for="patweight">Patient's Weight (kg):</label>
        
        <input type="text" class="form-control" name="weight" aria-describedby="patWeight" placeholder="72">
     
      </div>
  </div>

  <div class="row justify-content-center">
  <div class="col-sm-6">

        <label for="patHeight">Patient's Height (cm):</label>
        <input type="text" class="form-control" name="height" aria-describedby="patHeight" placeholder="172">
      </div>

      </div>

  <div class="row justify-content-center">
  <div class="col-sm-6">
        <label for="patPulse">Patient's Heart Rate (bpm): </label>
        <input type="text" class="form-control" name="pulse" aria-describedby="patPulse" placeholder="">
      </div>
    </div>

  <div class="row justify-content-center">
  <div class="col-sm-6">

      <label for="Prescription">Prescription:</label>
      <textarea class="form-control" name="prescription" rows="5"></textarea>
    </div>
        </div>

  <div class="row justify-content-center">
  <div class="col-sm-6">

      <label for="Observations">Observations:</label>
      <textarea class="form-control" name="observations" rows="3"></textarea>
    </div>
    </div>
  <div class="row justify-content-center">
  <div class="col-sm-6">
 <br>
       <div class="text-right">

    <button type="submit" id="submit" class="btn btn-primary float-right">Create Prescription</button>
</div>
     </div>
    </div>
  </form>
</div>


  


